<div class="login">

    <div class="inputLogin">

    <Input 
        @value={{this.value}} 
        class="rup-input" 
        type="email" 
        placeholder="username@copyright.com"
        pattern="^[a-zA-Z0-9._-]+@(copyright.com)"
        />  

    <p></p>
    <button 
        class="rup-btn rup-btn--lg " {{on "click" this.serviceLogin}} 
        type="button">Log In</button>    

    </div>
</div>
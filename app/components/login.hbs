<div class="login">

    <div class="inputLogin">
        <div id="verificator" class="verifier">
        <span class="rup-lozenge rup-lozenge--sm"  aria-describedby="lozenge-desc-6">Verifier</span>
        <p id="lozenge-desc-6" class="rup-visually-hidden">Verifier</p> 
        </div>
    <p></p>
    <Input 
        @value={{this.value}} 
        class="rup-input" 
        type="email" 
        placeholder="username@copyright.com"
        pattern="^[a-zA-Z0-9._-]+@(copyright.com)"
        />  

    <p></p>
    <button 
        class="rup-btn rup-btn--lg " {{on "click" this.submitLogin}} 
        type="button">Log In
    </button>    
   

    </div>
</div>

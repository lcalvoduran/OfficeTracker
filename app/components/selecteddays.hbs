    <div class="selecteddays">
      <div class="selecteddays-header">Selected Days</div>
      <p></p>

      <div class="rup-select">
        <div class="rup-toast" role="alert" aria-live="polite" aria-atomic="true">
          {{#each @selectedDay as | day index|}}
          <div class="eachDay">
          {{day.number}} {{day.month}}
          <button class="rup-icon-btn rup-icon-btn--xs rup-toast__clear-btn" type="button" {{on "click" (fn this.clearDates day.number day.month) }}>
              <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" class="icon-clear" role="img">
                  <path class="primary" fill-rule="evenodd" clip-rule="evenodd"
                      d="M4.293 4.293a1 1 0 011.414 0L12 10.586l6.293-6.293a1 1 0 111.414 1.414L13.414 12l6.293 6.293a1 1 0 01-1.414 1.414L12 13.414l-6.293 6.293a1 1 0 01-1.414-1.414L10.586 12 4.293 5.707a1 1 0 010-1.414z" />
              </svg>
          </button>   
          </div>       
          <span class="separator"></span>
          {{/each}} 

        </div>      
      </div>            
      <p></p>
      <button id="saveButton" {{on "click" this.saveDates}} class="rup-btn rup-btn--contained" type="button">Save</button>
    </div>


